<!--        </com.google.android.material.textfield.TextInputLayout>-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="submit"/>

    </LinearLayout>




</RelativeLayout>